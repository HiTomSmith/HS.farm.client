var Order = {
	
	//获取可购买电池套装数量
	getBatteryOrderNum:function(){
		var send = {			
			userId:UserInfo.UserId
		}; 
		console.log(JSON.stringify(UserInfo));
		Orders.BatteryOrderNum(send,function(cb){ 
			console.log(JSON.stringify(cb))      
			resultdata = cb.resultdata; 
			console.log(resultdata); 
			if(resultdata>=$('#reallynum').text()){
				$("#batteryNum").text(resultdata);
				$("#DividedPurchase").on("tap", function() {
				if($("#batteryNum").text()>=$('#reallynum').text()&&$('#reallynum').text()>0){
//					var objView = plus.webview.getWebviewById("battery");
//			        objView .reload(true);
					mui.openWindow({
						url: 'batteryOrderDetail.html',
						id: 'DividedPurchase',
						extras:{
							dircid:dirction2,
							goodnum:goodid,
							allpricego:allprice,
							resultdata2:$('#reallynum').text()
							
							}
				   })
					
				}else{
					
					mui.toast("请选择正确的电池数量");
					return false;
				}
			});	
			}
			
			
			
		});
	}
}
