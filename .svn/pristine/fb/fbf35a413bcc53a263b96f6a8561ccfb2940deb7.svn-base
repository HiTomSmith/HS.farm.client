	//获取上个页面的数据 
	function  getTopData(){
		var self = plus.webview.currentWebview();
		$('#Totalmoney').html("￥"+self.money+ '元');
	};
	 
	
	$('#callPhone').on('tap',function(){
		//拨打客服电话
		mui.confirm('确认拨打电话？', '拨打', function(e) {
			if (e.index == 0) {
				app.toast('已经取消');
			} else {		
				plus.device.dial('0512-66247071', false);
			}
		});
	});
	
